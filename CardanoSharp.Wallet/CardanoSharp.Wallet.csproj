<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
    <LangVersion>9.0</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.2.0</Version>
    <PackageProjectUrl>https://github.com/CardanoSharp/cardanosharp-wallet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/CardanoSharp/cardanosharp-wallet</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Words\ChineseSimplified.txt" />
    <EmbeddedResource Include="Words\ChineseTraditional.txt" />
    <EmbeddedResource Include="Words\Czech.txt" />
    <EmbeddedResource Include="Words\English.txt" />
    <EmbeddedResource Include="Words\French.txt" />
    <EmbeddedResource Include="Words\German.txt" />
    <EmbeddedResource Include="Words\Italian.txt" />
    <EmbeddedResource Include="Words\Japanese.txt" />
    <EmbeddedResource Include="Words\Korean.txt" />
    <EmbeddedResource Include="Words\Portuguese.txt" />
    <EmbeddedResource Include="Words\Spanish.txt" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Cryptography.KeyDerivation" Version="5.0.6" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="SauceControl.Blake2Fast" Version="2.0.0" />
    <PackageReference Include="System.Collections" Version="4.3.0" />
    <PackageReference Include="CardanoSharp.Chaos" Version="0.1.0" />
    <PackageReference Include="CardanoSharp.CBOR" Version="0.1.0" />
  </ItemGroup>

</Project>
